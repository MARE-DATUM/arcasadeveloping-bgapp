# Configurações básicas da aplicação
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=8050

# Banco de dados
DATABASE_URL=postgresql://user:password@localhost:5432/mapa_enterprise
REDIS_URL=redis://localhost:6379/0

# Tokens e APIs (ALTERAR ESTES VALORES)
COPERNICUS_API_KEY=your_copernicus_api_key
COPERNICUS_USERNAME=your_copernicus_username
COPERNICUS_PASSWORD=your_copernicus_password

GFW_API_KEY=your_gfw_api_key
GFW_CLIENT_ID=your_gfw_client_id
GFW_CLIENT_SECRET=your_gfw_client_secret

OPENWEATHER_API_KEY=your_openweather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Machine Learning
ML_MODELS_PATH=/app/data/models
PREDICTION_INTERVAL=300

# Autenticação
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_HOURS=24

# Segurança
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ENABLE_RATE_LIMIT=True

# Cache
CACHE_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/mapa_enterprise.log
