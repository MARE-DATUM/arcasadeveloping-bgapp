{
  "name": "bgapp-scientific-dashboard",
  "version": "2.0.0",
  "description": "BGAPP - Advanced Scientific Dashboard with Unreal Engine & deck.gl integration",
  "main": "apps/frontend/index.html",
  "scripts": {
    "start": "npx http-server apps/frontend -p 8000 -c-1",
    "dev": "npx http-server apps/frontend -p 8080 -c-1 --cors",
    "dev:admin": "cd admin-dashboard && npm run dev",
    "dev:realtime": "cd realtime-angola-nextjs && npm run dev",
    "build": "echo 'Building BGAPP...' && npm run optimize",
    "optimize": "node src/scripts/optimize-assets.js",
    "deploy": "wrangler pages deploy apps/frontend --project-name bgapp-frontend",
    "deploy:admin": "cd admin-dashboard && ./deploy-production.sh",
    "deploy:realtime": "cd realtime-angola-nextjs && npm run deploy",
    "test": "echo 'Tests configured'",
    "lint": "eslint apps/frontend/assets/js/",
    "format": "prettier --write apps/frontend/assets/"
  },
  "dependencies": {
    "deck.gl": "^9.1.14",
    "@deck.gl/core": "^9.1.14",
    "@deck.gl/layers": "^9.1.14",
    "@deck.gl/geo-layers": "^9.1.14",
    "@deck.gl/aggregation-layers": "^9.1.14",
    "@deck.gl/mesh-layers": "^9.1.14",
    "@deck.gl/extensions": "^9.1.14",
    "@deck.gl/json": "^9.1.14",
    "@loaders.gl/core": "^4.2.0",
    "@loaders.gl/csv": "^4.2.0",
    "@loaders.gl/json": "^4.2.0",
    "@loaders.gl/geojson": "^4.2.0",
    "@math.gl/core": "^4.0.0",
    "@math.gl/web-mercator": "^4.0.0",
    "three": "^0.160.0",
    "three-gltf-loader": "^1.111.0",
    "mapbox-gl": "^3.0.0",
    "d3": "^7.8.5",
    "plotly.js-dist": "^2.27.0",
    "chart.js": "^4.4.0",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "@types/d3": "^7.4.3",
    "@types/leaflet": "^1.9.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "wrangler": "^3.19.0"
  },
  "keywords": [
    "bgapp",
    "scientific-dashboard",
    "oceanographic",
    "visualization",
    "unreal-engine",
    "deck.gl",
    "webgl",
    "geospatial",
    "marine-data",
    "angola",
    "cloudflare-pages"
  ],
  "author": "MareDatum Consultoria e GestÃ£o de Projectos Unipessoal LDA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marconadas/arcasadeveloping-bgapp.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/marconadas/arcasadeveloping-bgapp/issues"
  },
  "homepage": "https://github.com/marconadas/arcasadeveloping-bgapp#readme"
}
